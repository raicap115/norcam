@{
    ViewData["Title"] = "Órdenes de Trabajo";
}
@model Ordenes
@{
    Layout="_LayoutCInt";
}

<div style="margin-top: 15px;">
    <ul class="nav nav-tabs dark">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Ordenes" asp-action="Index">ÓRDENES</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Facturas" asp-action="Index">FACTURAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Recibos" asp-action="Index">RECIBOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cuentas" asp-action="Index">CTA. CTES.</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cliente" asp-action="Index">CLIENTES</a>
        </li>
    </ul>
</div>



<div class="row">
    <div class="col-md-10">
        <table class="table table-hover" style="margin-top: 35px;">
            <thead>
                <tr>
                    <th style="text-align: center;"># Orden</th>
                    <th style="text-align: center;">Recepción</th>
                    <th style="text-align: center;">Cliente</th>
                    <th style="text-align: center;">Contenido</th>
                </tr>
            </thead>            
            <tbody>
                
            </tbody>
        </table>
    </div>
    <div class="col-md-2">
        <form action="" method="post">
            <table style="text-align: center;">
                <tr>
                    <td>
                        <button type="button" style="margin-top: 120px;" class="btn btn-info" data-toggle="modal" data-target="#nuevoCliente" >
                            NUEVO
                        </button>
                    </td>
                    <!-- Modal -->
                    <div class="modal fade" id="nuevoCliente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Nueva Órden</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            <div class="container h-100">
                            <form method="post" action="">
                                <div class="form-group">
                                    <label asp-for="fec_rec"></label>
                                    <input type="text" asp-for="fec_rec" class="form-control">
                                    <span asp-validation-for="fec_rec" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="proveedor"></label>
                                    <input type="text" asp-for="proveedor" class="form-control">
                                    <span asp-validation-for="proveedor" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="contenido"></label>
                                    <input type="text" asp-for="contenido" class="form-control">
                                    <span asp-validation-for="contenido" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="peso"></label>
                                    <input type="text" asp-for="peso" class="form-control">
                                    <span asp-validation-for="peso" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="ubicacion"></label>
                                    <input type="text" asp-for="ubicacion" class="form-control">
                                    <span asp-validation-for="ubicacion" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="regimen"></label>
                                    <input type="text" asp-for="regimen" class="form-control">
                                    <span asp-validation-for="regimen" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="fec_num"></label>
                                    <input type="text" asp-for="fec_num" class="form-control">
                                    <span asp-validation-for="fec_num" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="fec_entrega"></label>
                                    <input type="text" asp-for="fec_entrega" class="form-control">
                                    <span asp-validation-for="fec_entrega" class="text-danger"></span>  
                                </div>
                                <div class="form-group">
                                    <label asp-for="valor_num"></label>
                                    <input type="text" asp-for="valor_num" class="form-control">
                                    <span asp-validation-for="valor_num" class="text-danger"></span>  
                                </div>
                            </form>
                            </div>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                            <button type="submit" name="button" class="btn login_btn">Grabar</button>
                        </div>
                        </div>
                    </div>
                    </div>
                </tr>
                <tr>
                    <td><input style="margin-top: 20px;" type="button" class="btn btn-info" value="MODIFICAR"></td>
                </tr>
                <tr>
                    <td><input style="margin-top: 20px;" type="button" class="btn btn-info" value="ANULAR"></td>
                </tr>
                <tr>
                    <td><input style="margin-top: 20px;" type="button" class="btn btn-info" value="BUSCAR"></td>
                </tr>
            </table>
        </form>
    </div>
</div>