 @{
    ViewData["Title"] = "Facturas";
}

@model IEnumerable<Cliente>

@{
    Layout="_LayoutCInt";
}



<div style="margin-top: 15px;">
    <ul class="nav nav-tabs dark">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Ordenes" asp-action="Index">Ã“RDENES</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Facturas" asp-action="Index">FACTURAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Recibos" asp-action="Index">RECIBOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cuentas" asp-action="Index">CTA. CTES.</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Cliente" asp-action="Index">CLIENTES</a>
        </li>
    </ul>
</div>


<div class="row">
    <div class="col-md-10">
        <table class="table table-hover" style="margin-top: 35px;">
            <thead>
                <tr>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model=> model.id)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model=> model.razon_social)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model=> model.ruc)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model=> model.direccion)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model=> model.telefono)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model=> model.fax)
                    </th>
                    <th style="text-align: center; font-weight: bold;">
                        Editar
                    </th>
                    <th style="text-align: center; font-weight: bold;">
                        Anular
                    </th>
                </tr>
            </thead>            
            <tbody>
               @foreach (var cliente in Model)
               {
                   <tr>
                       <td>
                           @Html.DisplayFor(modelItem=> cliente.id)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem=> cliente.razon_social)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem=> cliente.ruc)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem=> cliente.direccion)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem=> cliente.telefono)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem=> cliente.fax)
                       </td>
                       <td>
                           <form action="Editar" method="post">
                               <input type="hidden" name="Id" value="@cliente.id">
                               <button class="btn btn-warning" style="text-align: center;">Editar</button>
                           </form>
                       </td>
                       <td>
                           <form action="Anular" method="post">
                               <input type="hidden" name ="Id" value="@cliente.id">
                               <button class="btn btn-danger" style="text-align: center;">Anular</button>
                           </form>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
    <div class="col-md-2">
        <form action="" method="post">
            <table style="text-align: center;">
                <tr>
                    <td>
                        <a asp-controller="Cliente" asp-action="Nuevo"><button type="button" class="btn btn-info">NUEVO</button></a>
                    </td>                    
                </tr>
                <tr>
                    <td><input style="margin-top: 20px;" type="button" class="btn btn-info" value="BUSCAR"></td>
                </tr>
            </table>
        </form>
    </div>
</div>

